name: AI Factory Self-Debugger

on:
  workflow_run:
    workflows: ["AI Project Builder from Issue"] # TÃªn cá»§a workflow sáº£n xuáº¥t
    types:
      - completed

jobs:
  debug-factory-failure:
    # Chá»‰ cháº¡y náº¿u workflow sáº£n xuáº¥t Ä‘Ã£ hoÃ n thÃ nh vÃ  tháº¥t báº¡i
    if: ${{ github.event.workflow_run.conclusion == 'failure' }}
    runs-on: ubuntu-latest
    
    permissions:
      contents: write  # Quyá»n Ä‘á»ƒ Ä‘á»c code
      pull-requests: write # Quyá»n Ä‘á»ƒ táº¡o Pull Request
      actions: read # Quyá»n Ä‘á»ƒ Ä‘á»c log

    steps:
      - name: Checkout Factory Code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with: { python-version: '3.10' }
      - run: pip install google-generativeai requests
      
      - name: Download Logs of Failed Run
        id: download_logs
        uses: actions/download-artifact@v4
        with:
          name: ${{ github.event.workflow_run.id }}-logs
          path: failed_run_logs
          github-token: ${{ secrets.GITHUB_TOKEN }} # DÃ¹ng token máº·c Ä‘á»‹nh
          run-id: ${{ github.event.workflow_run.id }}
          
      - name: Run AI Debugger Script for the Factory Itself
        id: ai_fix
        env:
          FAILED_RUN_ID: ${{ github.event.workflow_run.id }}
          GEMINI_API_KEY: ${{ secrets.GEMINI_API_KEY }}
          GITHUB_TOKEN: ${{ secrets.GH_PAT }} # DÃ¹ng PAT Ä‘á»ƒ cÃ³ quyá»n táº¡o PR
          REPO_TO_FIX: ${{ github.repository }} # Sá»­a chÃ­nh repo nÃ y
          FILE_TO_FIX: ".github/scripts/genesis.py" # File bá»‹ lá»—i
        run: |
          # Script nÃ y sáº½ Ä‘á»c log tá»« failed_run_logs/, Ä‘á»c genesis.py,
          # gá»i AI, vÃ  ghi code Ä‘Ã£ sá»­a vÃ o má»™t file má»›i.
          # (Logic Python sáº½ Ä‘Æ°á»£c viáº¿t chi tiáº¿t sau)
          echo "corrected_code=print('Hello Fixed World!')" >> $GITHUB_OUTPUT
          echo "commit_message=fix(genesis): AI attempt to fix JSON parsing" >> $GITHUB_OUTPUT
          echo "analysis=The previous version failed due to a JSONDecodeError. This patch improves the JSON extraction logic." >> $GITHUB_OUTPUT

      - name: Create Pull Request with AI Fix
        uses: peter-evans/create-pull-request@v6
        with:
          token: ${{ secrets.GH_PAT }}
          commit-message: ${{ steps.ai_fix.outputs.commit_message }}
          title: "ðŸ¤– AI Auto-Fix: ${{ steps.ai_fix.outputs.commit_message }}"
          body: |
            ### ðŸ©º AI Analysis
            ${{ steps.ai_fix.outputs.analysis }}

            ### Proposed Fix
            This PR contains an automated fix generated by AI after analyzing the build failure in run #${{ github.event.workflow_run.id }}.

            Please review the changes and merge if they are correct.
          branch: "ai-fix/${{ github.event.workflow_run.id }}"
          base: main
          delete-branch: true
          # Logic Ä‘á»ƒ cáº­p nháº­t file genesis.py
          # (Pháº§n nÃ y cáº§n Ä‘Æ°á»£c hoÃ n thiá»‡n)
